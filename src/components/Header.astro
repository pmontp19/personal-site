---
const { pathname } = Astro.url;
---

<header>
  <div class="container">
    <div class="header-content">
      <div class="logo">
        <a href="/">Pere Montpeó</a>
      </div>
      <nav>
        <ul class="nav-list">
          <li class="nav-item"><a href="/" class=`nav-link ${pathname === '/' ? 'active' : ''}`>Inici</a></li>
          <li class="nav-item"><a href="/blog" class=`nav-link ${pathname.startsWith('/blog') ? 'active' : ''}`>Apunts</a></li>
          <li class="nav-item"><a href="/experience" class=`nav-link ${pathname.startsWith('/experience') ? 'active' : ''}`>Experiència</a></li>
          <li class="nav-item"><a href="/contact" class=`nav-link ${pathname.startsWith('/contact') ? 'active' : ''}`>Contacte</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  header {
    padding: 1rem 0; /* Adjusted padding */
    border-bottom: 1px solid var(--border); /* Use border variable */
    background-color: var(--background);
    position: sticky;
    top: 0;
    z-index: 100;
    /* Removed box-shadow, using border instead */
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 3.5rem;
  }

  .logo a {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--foreground);
    text-decoration: none;
  }
  .logo a:hover {
    text-decoration: none;
    color: var(--primary);
  }

  .nav-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-muted); /* Use muted color for non-active links */
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0.5rem 0; /* Add padding for easier clicking */
  }

  .nav-link:hover,
  .nav-link:focus {
    color: var(--primary);
    text-decoration: none;
  }

  .nav-link.active {
    color: var(--foreground); /* Use foreground color for active */
    font-weight: 600;
    position: relative;
    text-decoration: underline;
    text-decoration-style: wavy;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }


  @media (max-width: 768px) {
    /* Keep responsive adjustments */
    .header-content {
      flex-direction: column;
      gap: 1rem;
      height: auto;
      padding: 0.5rem 0; /* Add padding when stacked */
    }

    .nav-list {
      gap: 1rem;
    }
  }
</style>