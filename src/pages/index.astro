---
import Layout from "../layouts/Layout.astro";
import InteractiveAvatar from "../components/InteractiveAvatar.astro";
import BlogPosts from "../components/BlogPosts.astro";
import MagicCard from "../components/MagicCard.astro";

const year = new Date().getFullYear();
---

<Layout>
	<main class="container">
		<!-- About Me -->
		<section class="about">
			<div class="about-grid">
				<div class="about-content">
					<h1>Hola, soc Pere Montpe√≥</h1>
					<p>
						I'm a software engineer passionate about creating
						intuitive and efficient web applications. With over 5
						years of experience in frontend development, I
						specialize in React, TypeScript, and modern web
						technologies. When I'm not coding, you can find me
						hiking, reading, or experimenting with new recipes in
						the kitchen.
					</p>
				</div>
				<div class="profile-image">
					<InteractiveAvatar />
				</div>
			</div>
		</section>

		<!-- Current Job -->
		<section class="job">
			<h2>Actualment</h2>
			<MagicCard>
				<h3>Software Engineer</h3>
				<p class="company">Decathlon</p>
				<p class="description">
					Leading the development of our flagship product, focusing on
					performance optimization and accessibility.
				</p>
			</MagicCard>
		</section>

		<!-- Blog -->
		<BlogPosts />
	</main>
</Layout>

<style>
	/* Header styles */
	header {
		position: sticky;
		top: 0;
		z-index: 10;
		border-bottom: 1px solid var(--border-muted);
		background-color: rgba(3, 7, 18, 0.8);
		backdrop-filter: blur(4px);
	}

	.header-content {
		display: flex;
		height: 4rem;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 500;
	}

	nav {
		display: flex;
		gap: 1rem;
	}

	@media (min-width: 640px) {
		nav {
			gap: 1.5rem;
		}
	}

	nav a {
		font-size: 0.875rem;
		font-weight: 500;
	}

	/* Main content */
	main {
		padding-top: 2rem;
		padding-bottom: 2rem;
	}

	@media (min-width: 768px) {
		main {
			padding-top: 3rem;
			padding-bottom: 3rem;
		}
	}

	/* Section styles */
	section {
		margin-bottom: 3rem;
	}

	@media (min-width: 768px) {
		section {
			margin-bottom: 5rem;
		}
	}

	/* About section */
	.about-grid {
		display: grid;
		gap: 2rem;
	}

	@media (min-width: 768px) {
		.about-grid {
			grid-template-columns: 2fr 1fr;
			gap: 3rem;
		}
	}

	.about-content {
		order: 2;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.profile-image {
		display: flex;
		justify-content: center;
		order: 1;
		margin-bottom: 1rem;
	}

	@media (min-width: 768px) {
		.about-content {
			order: 1;
		}

		.profile-image {
			justify-content: flex-end;
			order: 2;
			margin-bottom: 0;
		}
	}

	h1 {
		font-size: 1.5rem;
		font-weight: 700;
		letter-spacing: -0.025em;
	}

	@media (min-width: 640px) {
		h1 {
			font-size: 1.875rem;
		}
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 2.25rem;
		}
	}

	.about-content p {
		font-size: 1rem;
		color: var(--text-muted);
	}

	@media (min-width: 640px) {
		.about-content p {
			font-size: 1.125rem;
		}
	}

	/* Job section */
	h2 {
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: 600;
	}

	@media (min-width: 768px) {
		h2 {
			margin-bottom: 1.5rem;
			font-size: 1.5rem;
		}
	}

	.company {
		color: var(--text-muted);
	}

	.description {
		margin-top: 0.5rem;
		font-size: 0.875rem;
		color: var(--text-muted);
	}

	/* Footer */
	footer {
		border-top: 1px solid var(--border-muted);
		background-color: #111827;
	}

	.footer-content {
		padding-top: 1.5rem;
		padding-bottom: 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	@media (min-width: 768px) {
		.footer-content {
			padding-top: 2rem;
			padding-bottom: 2rem;
		}
	}

	@media (min-width: 640px) {
		.footer-content {
			flex-direction: row;
		}
	}

	.copyright {
		font-size: 0.75rem;
		color: var(--text-muted);
	}

	@media (min-width: 640px) {
		.copyright {
			font-size: 0.875rem;
		}
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: var(--text-muted);
	}

	.social-links a:hover {
		color: #e5e7eb;
	}

	.social-links svg {
		width: 1.25rem;
		height: 1.25rem;
	}
</style>
