---
import Layout from "../layouts/Layout.astro";
import InteractiveAvatar from "../components/InteractiveAvatar.astro";
import BlogPosts from "../components/BlogPosts.astro";
import MagicCard from "../components/MagicCard.astro";
import { getCollection } from "astro:content";

const year = new Date().getFullYear();

// Get the latest experience item
const allExperiences = await getCollection("experience", ({ data }) => {
  // Filter out drafts if necessary, assuming a 'draft' property
  // return data.draft !== true;
  return true; // Keep all for now, adjust if needed
});

// Sort experiences by date (assuming a 'date' or 'startDate' property in frontmatter)
// Adjust the sort key ('data.startDate' or similar) as needed based on your frontmatter structure
const sortedExperiences = allExperiences.sort(
  (a, b) =>
    new Date(b.data.startDate).getTime() - new Date(a.data.startDate).getTime()
);
const latestExperience = sortedExperiences[0]; // Get the most recent one
---

<Layout>
  <main class="container">
    <!-- About Me -->
    <section class="about animate">
      <div class="about-grid">
        <div class="about-content">
          <h1>Hola, soc Pere Montpeó</h1>
          <p>
            Enginyer de programari especialitzat en tot i en res. Actualment,
            fent que els ordinadors facin coses sols. Si no estic programant,
            segurament em trobaràs sobre la bicicleta, a la cuina o llegint.
          </p>
        </div>
        <div class="profile-image">
          <InteractiveAvatar />
        </div>
      </div>
    </section>

    <!-- Current Job -->
    <section class="job animate">
      <div class="section-header">
        <h2>Actualment</h2>
        <a href="/experience" class="view-all-link-text">Veure tot →</a>
      </div>
      {
        latestExperience && (
          <MagicCard>
            <h3>{latestExperience.data.role}</h3>
            <p class="company">{latestExperience.data.company}</p>
            <p class="description">{latestExperience.data.description}</p>
			<a href="/experience" class="read-more">
            Llegir més →
          </a>
          </MagicCard>
        )
      }
    </section>

    <!-- Blog -->
    <BlogPosts />
  </main>
</Layout>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 1px solid var(--border-muted);
    background-color: rgba(3, 7, 18, 0.8);
    backdrop-filter: blur(4px);
  }

  .header-content {
    display: flex;
    height: 4rem;
    align-items: center;
    justify-content: space-between;
  }

  .section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 1.5rem;
  }

  .read-more {
    margin-top: auto;
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .read-more:hover {
    text-decoration: underline;
    color: #3b82f6;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 500;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    nav {
      gap: 1.5rem;
    }
  }

  nav a {
    font-size: 0.875rem;
    font-weight: 500;
  }

  /* Main content */
  main {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  @media (min-width: 768px) {
    main {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }

  /* Section styles */
  section {
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    section {
      margin-bottom: 5rem;
    }
  }

  /* About section */
  .about-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .about-grid {
      grid-template-columns: 2fr 1fr;
      gap: 3rem;
    }
  }

  .about-content {
    order: 2;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .profile-image {
    display: flex;
    justify-content: center;
    order: 1;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .about-content {
      order: 1;
    }

    .profile-image {
      justify-content: flex-end;
      order: 2;
      margin-bottom: 0;
    }
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  @media (min-width: 640px) {
    h1 {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 2.25rem;
    }
  }

  .about-content p {
    font-size: 1rem;
    color: var(--text-muted);
  }

  @media (min-width: 640px) {
    .about-content p {
      font-size: 1.125rem;
    }
  }

  /* Job section */
  h2 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
  }

  @media (min-width: 768px) {
    h2 {
      margin-bottom: 1.5rem;
      font-size: 1.5rem;
    }
  }

  .company {
    color: var(--text-muted);
  }

  .description {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem; /* Add margin below description */
  }

  /* Footer */
  footer {
    border-top: 1px solid var(--border-muted);
    background-color: #111827;
  }

  .footer-content {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .footer-content {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }

  @media (min-width: 640px) {
    .footer-content {
      flex-direction: row;
    }
  }

  .copyright {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  @media (min-width: 640px) {
    .copyright {
      font-size: 0.875rem;
    }
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--text-muted);
  }

  .social-links a:hover {
    color: #e5e7eb;
  }

  .social-links svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
