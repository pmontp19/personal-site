---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import InteractiveAvatar from "../components/InteractiveAvatar.astro";
import BlogPosts from "../components/BlogPosts.astro";
import MagicCard from "../components/MagicCard.astro";

const year = new Date().getFullYear();
---

<Layout>
	 <Header />

	<main class="container">
		<!-- About Me -->
		<section class="about">
			<div class="about-grid">
				<div class="about-content">
					<h1>Hola, soc Pere Montpeó</h1>
					<p>
						I'm a software engineer passionate about creating
						intuitive and efficient web applications. With over 5
						years of experience in frontend development, I
						specialize in React, TypeScript, and modern web
						technologies. When I'm not coding, you can find me
						hiking, reading, or experimenting with new recipes in
						the kitchen.
					</p>
				</div>
				<div class="profile-image">
					<InteractiveAvatar />
				</div>
			</div>
		</section>

		<!-- Current Job -->
		<section class="job">
			<h2>Actualment</h2>
			<MagicCard>
				<h3>Software Engineer</h3>
				<p class="company">Decathlon</p>
				<p class="description">
					Leading the development of our flagship product, focusing on
					performance optimization and accessibility.
				</p>
			</MagicCard>
		</section>

		<!-- Blog -->
		<BlogPosts />
	</main>

	<!-- Footer -->
	<footer>
		<div class="container">
			<div class="footer-content">
				<p class="copyright">
					&copy; <span id="footer-year">{year}</span> Pere Montpeó. Tots els drets reservats.
				</p>
				<div class="social-links">
					<a
						href="https://github.com/pmontp19"
						target="_blank"
						rel="noopener noreferrer"
					>
						<svg
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								fill-rule="evenodd"
								d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="sr-only">GitHub</span>
					</a>
					<a
						href="https://twitter.com/pmontp19"
						target="_blank"
						rel="noopener noreferrer"
					>
						<svg
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								d="M13.795 10.533 20.68 2h-3.073l-5.255 6.517L7.69 2H1l7.806 10.91L1.47 22h3.074l5.705-7.07L15.31 22H22l-8.205-11.467Zm-2.38 2.95L9.97 11.464 4.36 3.627h2.31l4.528 6.317 1.443 2.02 6.018 8.409h-2.31l-4.934-6.89Z"
							></path>
						</svg>
						<span class="sr-only">Twitter</span>
					</a>
					<a
						href="https://linkedin.com/in/perem"
						target="_blank"
						rel="noopener noreferrer"
					>
						<svg
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								fill-rule="evenodd"
								d="M12.51 8.796v1.697a3.738 3.738 0 0 1 3.288-1.684c3.455 0 4.202 2.16 4.202 4.97V19.5h-3.2v-5.072c0-1.21-.244-2.766-2.128-2.766-1.827 0-2.139 1.317-2.139 2.676V19.5h-3.19V8.796h3.168ZM7.2 6.106a1.61 1.61 0 0 1-.988 1.483 1.595 1.595 0 0 1-1.743-.348A1.607 1.607 0 0 1 5.6 4.5a1.601 1.601 0 0 1 1.6 1.606Z"
								clip-rule="evenodd"></path>
							<path d="M7.2 8.809H4V19.5h3.2V8.809Z"></path>
						</svg>
						<span class="sr-only">LinkedIn</span>
					</a>
				</div>
			</div>
		</div>
	</footer>
</Layout>

<script is:inline>
	document.getElementById("footer-year").innerText = new Date().getFullYear();
</script>

<style>
	/* Header styles */
	header {
		position: sticky;
		top: 0;
		z-index: 10;
		border-bottom: 1px solid #1e293b;
		background-color: rgba(3, 7, 18, 0.8);
		backdrop-filter: blur(4px);
	}

	.header-content {
		display: flex;
		height: 4rem;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 500;
	}

	nav {
		display: flex;
		gap: 1rem;
	}

	@media (min-width: 640px) {
		nav {
			gap: 1.5rem;
		}
	}

	nav a {
		font-size: 0.875rem;
		font-weight: 500;
	}

	/* Main content */
	main {
		padding-top: 2rem;
		padding-bottom: 2rem;
	}

	@media (min-width: 768px) {
		main {
			padding-top: 3rem;
			padding-bottom: 3rem;
		}
	}

	/* Section styles */
	section {
		margin-bottom: 3rem;
	}

	@media (min-width: 768px) {
		section {
			margin-bottom: 5rem;
		}
	}

	/* About section */
	.about-grid {
		display: grid;
		gap: 2rem;
	}

	@media (min-width: 768px) {
		.about-grid {
			grid-template-columns: 2fr 1fr;
			gap: 3rem;
		}
	}

	.about-content {
		order: 2;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.profile-image {
		display: flex;
		justify-content: center;
		order: 1;
		margin-bottom: 1rem;
	}

	@media (min-width: 768px) {
		.about-content {
			order: 1;
		}

		.profile-image {
			justify-content: flex-end;
			order: 2;
			margin-bottom: 0;
		}
	}

	h1 {
		font-size: 1.5rem;
		font-weight: 700;
		letter-spacing: -0.025em;
	}

	@media (min-width: 640px) {
		h1 {
			font-size: 1.875rem;
		}
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 2.25rem;
		}
	}

	.about-content p {
		font-size: 1rem;
		color: #9ca3af;
	}

	@media (min-width: 640px) {
		.about-content p {
			font-size: 1.125rem;
		}
	}

	/* Job section */
	h2 {
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: 600;
	}

	@media (min-width: 768px) {
		h2 {
			margin-bottom: 1.5rem;
			font-size: 1.5rem;
		}
	}

	.company {
		color: #9ca3af;
	}

	.description {
		margin-top: 0.5rem;
		font-size: 0.875rem;
		color: #6b7280;
	}

	/* Footer */
	footer {
		border-top: 1px solid #1e293b;
		background-color: #111827;
	}

	.footer-content {
		padding-top: 1.5rem;
		padding-bottom: 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	@media (min-width: 768px) {
		.footer-content {
			padding-top: 2rem;
			padding-bottom: 2rem;
		}
	}

	@media (min-width: 640px) {
		.footer-content {
			flex-direction: row;
		}
	}

	.copyright {
		font-size: 0.75rem;
		color: #9ca3af;
	}

	@media (min-width: 640px) {
		.copyright {
			font-size: 0.875rem;
		}
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: #9ca3af;
	}

	.social-links a:hover {
		color: #e5e7eb;
	}

	.social-links svg {
		width: 1.25rem;
		height: 1.25rem;
	}
</style>
