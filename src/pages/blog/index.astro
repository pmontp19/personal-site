---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../../utils/date";

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);

const postsByYear: { [year: number]: typeof sortedPosts } = {};
sortedPosts.forEach((post) => {
  const year = post.data.date.getFullYear();
  if (!postsByYear[year]) {
    postsByYear[year] = [];
  }
  postsByYear[year].push(post);
});

const pageTitle = "Apunts | Pere Montpeó";
const pageDescription = "Pensaments, tutorials i apunts sobre desenvolupament web i tecnologia.";
const siteAuthor = "Pere Montpeó";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Apunts - Blog Posts",
  "description": pageDescription,
  "itemListElement": sortedPosts.map((post, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "BlogPosting",
      "headline": post.data.title,
      "url": new URL(`/blog/${post.slug}`, Astro.url.origin).toString(),
      "datePublished": post.data.date.toISOString(),
      "author": {
        "@type": "Person",
        "name": siteAuthor
      },
      "description": post.data.description
    }
  }))
};

const jsonLdScript = JSON.stringify(jsonLd);
---

<Layout title={pageTitle}>
  <script type="application/ld+json" set:html={jsonLdScript} />

  <main class="container">
    <section class="blog-section section">
      <h1>Apunts</h1>
      <p class="subtitle">{pageDescription}</p>

      <ul class="posts-list">
        {sortedPosts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}`}>
              <time datetime={post.data.date.toISOString()} class="post-date">
                {formatDate(post.data.date)}
              </time>
              <span class="post-title">{post.data.title}</span>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<style>
  /* Keep specific styles for the post list */
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
    max-width: 700px;
  }

  .posts-list li {
    margin-bottom: 0.75rem;
  }

  .posts-list a {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--foreground);
    transition: color 0.2s ease;
    padding: 0.25rem 0; /* Add some vertical padding for easier clicking */
  }

  .posts-list a:hover,
  .posts-list a:focus {
    color: var(--primary);
    text-decoration: none;
  }

  .posts-list a:hover .post-title,
  .posts-list a:focus .post-title {
     text-decoration: underline;
     text-decoration-thickness: 1px;
     text-underline-offset: 2px;
  }

  .post-date {
    font-family: 'Geist Mono', monospace;
    font-size: 0.85rem;
    color: var(--text-muted);
    white-space: nowrap;
    flex-shrink: 0; /* Prevent date from shrinking */
  }

  .post-title {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
  }

  @media (min-width: 768px) {
    .post-title {
      font-size: 1.1rem;
    }
  }
</style>