---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);

// Helper function to format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('ca-ES', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  });
};

const pageTitle = "Apunts | Pere Montpeó";
const pageDescription = "Pensaments, tutorials i apunts sobre desenvolupament web i tecnologia.";
const siteAuthor = "Pere Montpeó";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Apunts - Blog Posts",
  "description": pageDescription,
  "itemListElement": sortedPosts.map((post, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "BlogPosting",
      "headline": post.data.title,
      "url": new URL(`/blog/${post.slug}`, Astro.url.origin).toString(),
      "datePublished": post.data.date.toISOString(),
      "author": {
        "@type": "Person",
        "name": siteAuthor
      },
      "description": post.data.description
    }
  }))
};

const jsonLdScript = JSON.stringify(jsonLd);
---

<Layout title={pageTitle}>
  <script type="application/ld+json" set:html={jsonLdScript} />

  <main class="container">
    <section class="blog-section">
      <h1>Apunts</h1>
      <p class="subtitle">{pageDescription}</p>

      <ul class="posts-list">
        {sortedPosts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}`}>
              <time datetime={post.data.date.toISOString()} class="post-date">
                {formatDate(post.data.date)}
              </time>
              <span class="post-title">{post.data.title}</span>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<style>
  .blog-section {
    padding: 2rem 0 3rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  /* New styles for the post list */
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .posts-list li {
    margin-bottom: 0.75rem; /* Spacing between list items */
  }

  .posts-list a {
    display: flex; /* Align date and title on the same line */
    align-items: baseline; /* Align text nicely */
    gap: 0.75rem; /* Space between date and title */
    text-decoration: none;
    color: var(--foreground);
    transition: color 0.2s ease;
  }

  .posts-list a:hover,
  .posts-list a:focus {
    color: var(--primary);
    text-decoration: none; /* Keep no underline on hover by default */
  }

  .posts-list a:hover .post-title,
  .posts-list a:focus .post-title {
     text-decoration: underline; /* Underline title on hover/focus */
  }


  .post-date {
    font-family: 'Geist Mono', monospace; /* Use monospace for date */
    font-size: 0.9rem;
    color: var(--text-muted);
    white-space: nowrap; /* Prevent date from wrapping */
  }

  .post-title {
    font-size: 1rem;
    font-weight: 500;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    .post-title {
      font-size: 1.1rem;
    }
  }
</style>